{
	"schema": {
		"bsonType": "object",
		"required": [
			"name",
			"type_id"
		],
		"properties": {
			"_id": {
				"description": "文章目录 ID，系统自动生成"
			},
			"type_id": {
				"bsonType": "string",
				"description": "文章类型ID，标识当前目录所属分类",
				"label": "类型编号"
			},
			"menu_name": {
				"bsonType": "string",
				"description": "文章目录名称",
				"label": "名称"
			},
			"menu_icon": {
				"bsonType": "string",
				"description": "文章目录图标",
				"label": "图标"
			},
			"menu_is_add": {
				"bsonType": "bool",
				"description": "是否可以添加题库 ture 表示可以添加题库，false 表示这一级只是目录",
				"label": "是否添加题库菜单"
			},
			"menu_sort": {
				"bsonType": "int",
				"description": "文章目录序号（越大越靠后）",
				"label": "排序"
			},
			"menu_parent": {
				"bsonType": "string",
				"description": "父级文章目录Id 0表示顶级",
				"label": "父类"
			},
			"menu_enable": {
				"bsonType": "bool",
				"description": "是否启用文章目录，true启用、false禁用"
			},
			"create_date": {
				"bsonType": "timestamp",
				"description": "文章目录创建时间"
			}
		}
	},
	"index": [{
			"IndexName": "menu_id",
			"MgoKeySchema": {
				"MgoIndexKeys": [{
					"Name": "menu_id",
					"Direction": "1"
				}],
				"MgoIsUnique": true
			}
		},
		{
			"IndexName": "parent_id",
			"MgoKeySchema": {
				"MgoIndexKeys": [{
					"Name": "parent_id",
					"Direction": "1"
				}],
				"MgoIsUnique": false
			}
		}
	]
}
